<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Chiriac_Roxana_Lab7.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="ship.jpg"
                SemanticProperties.Description="Welcome to cruising!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Welcome to cruising!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            

            <Button
                x:Name="CounterBtn"
                Text="Enter the world of cruising"
                SemanticProperties.Hint="Changes color"
                Clicked="OnButtonClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
